{
  "compilerOptions": {
    // "baseUrl": "./",
    // "outDir": "./dist",
    // "incremental": true,
    "noEmit": true,
    "lib": ["DOM", "ES2022", "DOM.Iterable"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"],
    }
  },
  "include": ["./src/**/*", "./tsup.config.ts"],
  "exclude": ["./dist", "./node_modules"]
}
